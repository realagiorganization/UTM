\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{awesome-qa-chat}[2025/10/14 Minimal Awesome QA Chat styling]

\RequirePackage{xcolor}
\RequirePackage{enumitem}

\newlist{awesomeqa}{description}{1}
\setlist[awesomeqa]{labelsep=1em, leftmargin=2.5cm, style=nextline}

\newenvironment{AwesomeQAChat}{%
